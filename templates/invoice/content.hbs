<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet" />
  <title>Invoice Template</title>
  <style>
    * {
      position: relative;
      padding: 0;
      margin: 0;
      font-family: 'Poppins', sans-serif;
      color: #4d4c4c;
    }

    .divider {
      width: 100%;
      height: 1px;
      border-bottom: 0.5px solid #c4c4c4;
      margin: 12px 0px;
    }

    .text-xs {
      font-size: 12px;
      color: #202125;
    }

    .font-semiBold {
      font-weight: 600;
    }

    /* .title { text-align: right; font-size: 50px;
      font-weight: 600; margin-right: 50px; } */
    .date-container {
      display: flex;
      margin-top: 20px;
    }

    .date-liner {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .header-date {
      width: 100%;
      max-width: 350px;
      background-color: #c1eeff;
      border-radius: 10px 0 0 10px;
      display: flex;
      justify-content: space-around;
      align-items: center;
      font-size: 12px;
      padding: 2px 0px;
    }

    .header-date>.invoice-number {
      font-weight: 400;
    }

    .header-date>.invoice-date {
      font-weight: 600;
    }

    .container {
      position: relative;
      padding: 0px 40px;
    }

    .curve-image {
      position: absolute;
      left: 0px;
    }

    .invoice-to-container {
      position: relative;
      display: flex;
      flex-direction: column;
      gap: 1px;
      margin-top: 15px;
      margin-left: 30px;
      font-weight: 400;
      font-size: 12px;
    }

    .multi-line {
      position: absolute;
      right: 40px;
      margin-top: 30px;
    }

    /* .invoice-to-container > .invoiceTo { } */
    .invoice-to-container>.invoice-to-name {
      padding: 4px 0px;
      font-weight: 600;
      font-size: 14px;
    }

    .invoice-to-container>.invoice-city {
      font-size: 12px;
    }

    .invoice-to-container>.invoice-address {
      font-size: 11px;
    }

    .invoice-to-container>.invoice-phone-number {
      font-size: 11px;
    }

    .invoice-to-container>.inovoice-email {
      font-size: 11px;
    }

    .tabel-container {
      margin-top: 32px;
    }

    .grid-container-thread {
      display: grid;
      grid-template-columns: 40% 20% 20% 20%;
      background: #2a5cda;
      border-radius: 99px;
    }

    .grid-item-thread {
      font-weight: 700;
      padding: 4px 20px;
      color: white;
    }

    .grid-container-tbody {
      display: grid;
      grid-template-columns: 40% 20% 20% 20%;
      border-radius: 10px;
    }

    .grid-item-tbody {
      font-weight: 400;
      padding: 15px 20px;
      font-size: 12px;
      border-bottom: 1px solid #ddd;
    }

    .centered {
      text-align: center;
    }

    .invoice-conclude-container {
      display: flex;
      justify-content: space-between;
      margin-top: 60px;
    }

    .invoice-conclude-container>.term-condition-container {
      margin-top: 20px;
    }

    .invoice-conclude-container>.term-condition-container>.term-title {
      font-size: 12px;
    }

    .invoice-conclude-container>.term-condition-container>.term-notice {
      color: #808181;
      font-size: 8px;
      font-weight: 400;
    }

    .invoice-conclude-container>.term-condition-container>.due-date {
      font-size: 10px;
      margin-top: 16px;
    }

    .invoice-conclude-container>.total-container {
      display: flex;
      max-width: 220px;
      width: 100%;
      flex-direction: column;
      font-size: 12px;
    }

    .invoice-conclude-container>.total-container>.separate-item {
      display: flex;
      justify-content: space-between;
    }
  </style>
</head>

<body>
  <section id="invoice-date">
    <div class="date-container">
      <div class="date-liner">
        <img
          src="data:image/png;base64,"
          alt="divider" height="12px" />
      </div>
      <div class="header-date">
        <div class="invoice-number">invoice: {{invoiceNumber}}</div>
        <div class="invoice-date">Date {{createdAt}}</div>
      </div>
    </div>
  </section>

  <div class="container">
    <img class="curve-image"
      src="data:image/png;base64," />
    <section id="invoice-to">
      <div class="invoice-to-container">
        <img class="multi-line"
          src="data:image/png;base64," />
        <div class="invoice-tp">Invoice to:</div>
        <div class="invoice-to-name">{{name}}</div>
        <div class="invoice-city">{{organization}}</div>
        <div class="invoice-address">{{address}}</div>
        <div class="invoice-phone-number">{{phoneNumber}}</div>
        <div class="inovoice-email">{{email}}</div>
      </div>
    </section>

    <section id="invoice-table">
      <div id="table-container" class="tabel-container">
        <!-- Thread -->
        <div class="grid-container-thread">
          <div class="grid-item-thread">Item Description</div>
          <div class="grid-item-thread centered">Qty</div>
          <div class="grid-item-thread centered">Rate</div>
          <div class="grid-item-thread centered">Amount</div>
        </div>
        <!-- Tbody -->
        {{#each invoiceItems}}
        <div class='grid-container-tbody'>
          <div class='grid-item-tbody'>{{description}}</div>
          <div class='grid-item-tbody centered text-xs'>{{quantity}}</div>
          <div class='grid-item-tbody centered text-xs'>{{price}} {{../tokenSymbol}}</div>
          <div class='grid-item-tbody centered text-xs'>{{amount}} {{../tokenSymbol}}</div>
        </div>
        {{/each}}
      </div>
    </section>

    <section id="invoice-conclude">
      <div class="invoice-conclude-container">
        <div class="term-condition-container">
          <div class="term-title font-semiBold">Terms & Conditions</div>
          <div class="term-notice">
            <div>Please pay within 15 days of</div>
            <div>receiving this invoice.</div>
          </div>
          <div class="due-date">Due {{dueDate}}</div>
        </div>

        <div class="total-container">
          <div class="separate-item">
            <span>Sub Total:</span>
            <span> {{total}} {{tokenSymbol}}</span>
          </div>
          <div class="divider"></div>
          <div class="separate-item font-semibold">
            <span>Total:</span>
            <span> {{total}} {{tokenSymbol}}</span>
          </div>
        </div>
      </div>
    </section>
  </div>


</body>

</html>